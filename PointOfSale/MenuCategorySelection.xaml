<Page x:Class="PointOfSale.MenuCategorySelection"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PointOfSale"
      mc:Ignorable="d" 
      d:DesignHeight="720" d:DesignWidth="1200"
      Title="MenuCategorySelection">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Button Click="SelectCombo" Grid.Row="0" Grid.Column="0">
            <Image Source="pack://application:,,,/images/combo.jpg" Width="200"/>
        </Button>
        <Button Click="SelectEntree" Grid.Row="1" Grid.Column="0">
            <Image Source="pack://application:,,,/images/steakosaurus.png" Width="200"/>
        </Button>
        <Button Click="SelectDrink" Grid.Row="0" Grid.Column="1">
            <Image Source="pack://application:,,,/images/soda.png" Width="200"/>
        </Button>
        <Button Click="SelectSide" Grid.Row="1" Grid.Column="1">
            <Image Source="pack://application:,,,/images/fries.png" Width="200"/>
        </Button>
    </Grid>
</Page>
